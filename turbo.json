{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
	"globalEnv": ["NEXT_PUBLIC_PROJECT_ID"],
	"globalPassThroughEnv": ["NEXT_PUBLIC_PROJECT_ID"],
  "pipeline": {
    "build": {
      "env": ["NEXT_PUBLIC_PROJECT_ID"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
